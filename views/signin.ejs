<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('./partials/head') %>
    <title>Signin</title>
    <style>
       body {
            background: url('/images/one.jpg') no-repeat center center/cover;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 400px;
        }

        .signin-form {
            text-align: center;
        }

        .signin-form h2 {
            margin-bottom: 20px;
        }

        .input-group {
            margin-bottom: 15px;
            text-align: left;
        }

        .input-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .input-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .btn {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        @media (max-width: 768px) {
            .container {
                width: 80%;
            }
        }

        @media (max-width: 480px) {
            .container {
                width: 90%;
                padding: 15px;
            }
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container">
        <form action="/user/signin" method="post" class="signin-form">
            <h2>Sign In</h2>
            <div class="input-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" name="email" id="exampleInputEmail1" required>
                <small>We'll never share your email with anyone else.</small>
            </div>
            <div class="input-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name="password" id="exampleInputPassword1" required>
            </div>
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>

    <%- include('./partials/scripts') %>
</body>
</html>
