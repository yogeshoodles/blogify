 <!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
    .container{
    width: 80% ; /* Adds space from both left and right */
    height:  auto; /* Adjust height to leave space from the top and bottom */
    /*background-color: rgba(16, 86, 80, 0.8); /* Transparent background with 30% opacity */
    background-color: #f9f9f9;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: rgb(16, 4, 4);
    padding: 10px 10px; /* Adds space from the top and bottom */
    position: relative;
    margin: 50px auto; /* Creates spacing from the header and bottom */
   /* border-radius: 10px; /* Optional: Adds rounded corners for a modern look */
   flex-direction: column;
}
.container-heading {
  font-size: 2rem;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px; /* Adds space between heading and blog grid */
  width: 100%;
}
     .card {
        height: 100%;
        width: 100%;
        transition: transform 0.2s;
      }

      .card:hover {
        transform: translateY(-5px);
      }

      .card-img-container {
        position: relative;
        width: 100%;
        padding-top: 56.25%; /* 16:9 Aspect Ratio */
        overflow: hidden;
      }

      .card-img-top {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .card-body {
        display: flex;
        flex-direction: column;
        height: 100%;
        padding: 1rem;
      }

      .card-title {
        margin-bottom: 1rem;
        /* Limit to 2 lines of text */
        display: -webkit-box;
        /* -webkit-line-clamp: 2; */
        -webkit-box-orient: vertical;
        overflow: hidden;
      }

      /* Responsive Grid Layout */
      @media (max-width: 768px) {
  .container-heading {
    font-size: 1.8rem;
    margin-bottom: 15px;
  }
}

@media (max-width: 480px) {
  .container-heading {
    font-size: 1.5rem;
    margin-bottom: 10px;
  }
}

      .blog-grid {
        display: grid;
        gap: 1.5rem;
        padding: 1.5rem;
        width: 100%;
        max-width: 1400px;
        margin: 0 auto;
      }

      /* Responsive Breakpoints */
      @media (min-width: 576px) {
        .blog-grid {
          grid-template-columns: repeat(2, 1fr);
        }
      }

      @media (min-width: 768px) {
        .blog-grid {
          grid-template-columns: repeat(3, 1fr);
        }
      }

      @media (min-width: 1200px) {
        .blog-grid {
          grid-template-columns: repeat(4, 1fr);
        }
      }
    </style> 
  </head>
  <body>
    
    <%- include('./partials/nav') %>
    <%- include('./partials/hero') %>
    
    <div class="container">
      <h2 class="container-heading">Latest Blogs</h2>
      <div class="blog-grid">
        <% blogs.forEach(blog => { %>
        <div class="card">
          <div class="card-img-container">
            <img src="<%= blog.coverImageURL %>" class="card-img-top" alt="<%= blog.title %>" />
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= blog.title %></h5>
            <a href="/blog/<%= blog._id %>" class="btn btn-primary mt-auto">View</a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  
    <%- include('./partials/footer') %>
    <%- include('./partials/scripts') %>
  </body>
</html> 
 




  